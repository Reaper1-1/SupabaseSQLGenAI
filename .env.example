# Supabase Configuration
# Get these values from your Supabase project settings
# https://app.supabase.com/project/_/settings/api
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Management API Configuration
# Required for deploying edge functions and managing secrets
# Get this from: https://supabase.com/dashboard/account/tokens
SUPABASE_MANAGEMENT_ACCESS_TOKEN=your_supabase_management_access_token_here

# Supabase Project Reference
# Get this from your project URL: https://[PROJECT_REF].supabase.co
SUPABASE_PROJECT_REF=your_project_ref_here

# Supabase Service Role Key (for edge functions)
# Get this from: https://app.supabase.com/project/_/settings/api
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database URL for edge functions
# Get this from: https://app.supabase.com/project/_/settings/database
SUPABASE_DB_URL=your_database_connection_string_here

# External API Keys for Edge Functions
# These will be set as secrets for edge functions
BASE44_API_KEY=your_base44_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Additional API Keys
SLACK_WEBHOOK_URL=your_slack_webhook_url_here_optional
SENDGRID_API_KEY=your_sendgrid_api_key_here_optional

# Backend API Configuration (for Express server)
# Only needed if using Express backend instead of Supabase
API_URL=http://localhost:3001/api

# Optional: Enable Supabase Edge Functions
# Set to 'true' when edge functions are deployed
ENABLE_SUPABASE_EDGE_FUNCTIONS=false